<div class="home-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.pexels.com/photos/1283219/pexels-photo-1283219.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260)">
  <h1>MrCocktail</h1>
  <%= link_to "Create new cocktail", new_cocktail_path, class: "btn btn-ghost" %>
</div>
<div class="container">
<div class="cards">
  <% @cocktails.each do |cocktail| %>
  <div class="card-category mt-t" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">

    <%= link_to cocktail.name, cocktail_path(cocktail) %>
  </div>
  <% end %>
</div>
</div>

